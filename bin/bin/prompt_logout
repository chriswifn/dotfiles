#!/bin/sh

# Description:  Script to shutdown, reboot, suspend, or lock the screen
# Dependencies: tofi (wayland), rofi (xorg), systemd, swaylock
# Author:       Christian Hageloch


# set the prompt variable
case "$XDG_SESSION_TYPE" in
    wayland)
	_PROMPT="tofi --prompt-text "
	;;
    *)
	_PROMPT="rofi -dmenu -i -p "
	;;
esac

# logout
case "$(printf "shutdown\nreboot\nsuspend\nlock" | $_PROMPT "Logout: ")" in
    "shutdown")
	systemctl poweroff
	;;
    "reboot")
	systemctl reboot
	;;
    "hybernate")
	systemctl suspend 
	;;
    "lock")
	swaylock -c "#000000"
	;;
    *)
	exit 1
	;;
esac
