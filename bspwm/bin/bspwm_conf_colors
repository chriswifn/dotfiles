#!/bin/sh

# Description:  Colors for bspwm
#               Consists of a light and a dark theme
# Heavily inspired by Protesilaos Stavrou's bspwm configuration
# Author:       Christian Hageloch

if [ -f "$HOME"/.config/bspwm/active-theme ]
then
   case "$(cat "$HOME"/.config/bspwm/active-theme)" in
       modus-vivendi*)
           _BORDER_ACTIVE="#f78fe7"
           _BORDER_FOCUS="#00bcff"
           _BORDER_NORMAL="#000000"
           _BG_PRESELECT="#2f337f"
           ;;
       *)
           _BORDER_ACTIVE=="#8f0075"
           _BORDER_FOCUS="#0000c0"
           _BORDER_NORMAL="#ffffff"
           _BG_PRESELECT="#bbc3ff"
           ;;
   esac

   bspc config active_border_color "$_BORDER_ACTIVE" # for multihead setups only
   bspc config focused_border_color "$_BORDER_FOCUS"
   bspc config normal_border_color "$_BORDER_NORMAL"
   bspc config presel_feedback_color "$_BG_PRESELECT"
fi
