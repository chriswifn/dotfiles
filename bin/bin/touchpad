#!/bin/sh

# Description: Script to disable the touchpad on xorg.
# Dependencies: xinput
# Author: Christian Hageloch

# change _ID to the corresponding ID of the touchpad
_ID="13"
_CURRENT_STATE="$(xinput list-props "$_ID" | grep "Device Enabled" | awk '{print $NF}')"

case "$_CURRENT_STATE" in
    0)
	xinput --enable "$_ID"
	;;
    1)
	xinput --disable "$_ID"
	;;
    *)
	printf "Something went wrong with the ID"
	;;
esac
