# management settings 

super + x ; s
    pkill -USR1 -x sxhkd

super + x ; {q,r}
    bspc {quit,wm -r}

super + x ; l
    slock


# client keybindings

super + c ; {c,k}
    bspc node -{c,k}

super + c ; m
    bspc desktop -l next

super + c ; {t,f}
    bspc node -t {tiled,floating}

super + c ; {n,p}
    bspc node -f {next,prev}.local.!hidden.window


# node keybindings

super + n ; {m,l,s,p}
    bspc node -g {marked,locked,sticky,private}

super + n ; t
    bspc node -f last

super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}


# workspaces 

super + {_,shift + ,ctrl + shift +,ctrl +}{0-9}
    ;bspwm_dynamic_desktops {--df,--ns,--nm,--da} {0-9}




# preselection

super + w ; {h,j,k,l}
    bspc node -p {west,south,north,east}

super + w ; c
    bspc node -p cancel


# resize

super + r : {h,j,k,l}
    {bspc node -z right -20 0; \
    bspc node -z left +20 0, \
    bspc node -z top 0 -20; \
    bspc node -z bottom 0 +20, \
    bspc node -z top 0 +20; \
    bspc node -z bottom 0 -20, \
    bspc node -z right +20 0; \
    bspc node -z left -20 0}


# terminal

super + Return
    bspwm_run_or_raise st-256color st -e tmux new-session -A -s tempterm


# gui programs

super + g ; {g,e,f,z,}
    bspwm_run_or_raise {firefox firefox,Emacs emacs,Pcmanfm pcmanfm,zathura zathura}

super + g ; l
    .local/share/applications/LibreOffice-still.basic-x86_64.AppImage


# dmenu/rofi

super + d ; {a, b, s, l, t, w, f}
    {rofi -show drun, ~/bin/prompt_bookmarks, maimmenu, prompt_logout, delight, rofi -show window, tabfocus herbst}



