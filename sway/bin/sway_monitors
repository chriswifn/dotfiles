#!/bin/sh

# Description:  Script to automatically arrange monitors based on different setups
#               (personal)
# Dependencies: swaymsg (obviously)
# Author:       Christian Hageloch

_OUTPUTS="$(swaymsg -t get_outputs | jq -er '.[] | .name')"

if echo "$_OUTPUTS" | grep -qe "^DP-"; then
    swaymsg output DP-3 resolution 1920x1080 position 1920 0
    swaymsg output DP-4 resolution 1920x1080 position 0 0
    swaymsg output eDP-1 disable
else
    swaymsg output eDP-1 resolution 1920x1080 position 0 0 
fi
